// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum CategoryType {
  UNDEFINED
  NEED
  WANT
  DEBT
}

enum MonthCode {
  JAN
  FEB
  MAR
  APR
  MAY
  JUN
  JUL
  AUG
  SEP
  OCT
  NOV
  DEC
}

model Person {
  id           String        @id @default(cuid())
  name         String
  email        String        @unique
  family       Family        @relation(fields: [familyId], references: [id], onDelete: Cascade)
  familyId     String
  transactions Transaction[]
}

model Family {
  id         String     @id @default(cuid())
  name       String     @unique @default("Nameless fam")
  people     Person[]
  categories Category[]
  methods    Method[]
  months     Month[]
  vendors    Vendor[]
}

model Month {
  id              String        @id @default(cuid())
  monthCode       MonthCode
  year            Int
  family          Family        @relation(fields: [familyId], references: [id], onDelete: Cascade)
  familyId        String
  transactions    Transaction[]
  previousMonth   Month?        @relation("AdjacentMonths", fields: [previousMonthId], references: [id])
  previousMonthId String?       @unique
  nextMonth       Month?        @relation("AdjacentMonths")

  @@unique([monthCode, year, familyId])
}

model Category {
  id           String        @id @default(cuid())
  name         String
  budget       Budget?
  type         CategoryType  @default(UNDEFINED)
  transactions Transaction[]
  family       Family        @relation(fields: [familyId], references: [id], onDelete: Cascade)
  familyId     String

  @@unique([name, familyId])
}

model Budget {
  id          String   @id @default(cuid())
  budget      Float    @default(0.00)
  hasRollover Boolean  @default(false)
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String   @unique
}

model Method {
  id           String        @id @default(cuid())
  name         String
  transactions Transaction[]
  family       Family        @relation(fields: [familyId], references: [id], onDelete: Cascade)
  familyId     String

  @@unique([name, familyId])
}

model Vendor {
  id           String        @id @default(cuid())
  name         String
  transactions Transaction[]
  family       Family        @relation(fields: [familyId], references: [id], onDelete: Cascade)
  familyId     String

  @@unique([name, familyId])
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  date        DateTime
  person      Person   @relation(fields: [personId], references: [id], onDelete: Cascade)
  personId    String
  description String?
  vendor      Vendor?   @relation(fields: [vendorId], references: [id])
  vendorId    String?
  method      Method?   @relation(fields: [methodId], references: [id])
  methodId    String?
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  month       Month?    @relation(fields: [monthId], references: [id])
  monthId     String?
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
